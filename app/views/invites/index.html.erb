<h1>Listing invites</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Event</th>
      <th>Attending</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invites.each do |invite| %>
      <tr>
        <td><%= invite.user_id %></td>
        <td><%= invite.event_id %></td>
        <td><%= invite.attending %></td>
        <td><%= invite.creator %></td>
        <td><%= link_to 'Show', event_invite_path(id: invite.id) %></td>
        <td><%= link_to 'Edit', edit_event_invite_path(id: invite) %></td>
        <td><%= link_to 'Destroy', event_invite_path(id: invite), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Invite', new_event_invite_path %>
